{
    "project": {
        "name": "Nextjs Multilingual Blog",
        "description": "这是一个基于 Nextjs 的支持多语言的博客 Web 应用程序，使用 Nextjs 框架编写。",
        "framework": "Nextjs"
    },
    "rules": {
        "formatOnSave": true,
        "formatOnPaste": true,
        "formatOnType": true,
        "defaultFormatter": "prettier",
        "tabSize": 2,
        "insertSpaces": true,
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true,
        "trimFinalNewlines": true
    },
    "ignore": [
        "node_modules",
        "dist",
        "build",
        ".git",
        "*.log"
    ],
    "search": {
        "exclude": [
            "node_modules",
            "dist",
            "build",
            ".git",
            "*.log"
        ]
    }
} 